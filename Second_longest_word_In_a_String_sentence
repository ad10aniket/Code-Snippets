public class SecondLongestWord {

    public static String secondLongest(String sentence) {
        if (sentence == null || sentence.trim().isEmpty()) {
            return "";
        }

        // Split by non-letter characters to avoid punctuation issues
        String[] words = sentence.split("[^A-Za-z]+");

        String longest = "";
        String secondLongest = "";

        for (String word : words) {
            if (word.length() > longest.length()) {
                secondLongest = longest;
                longest = word;
            } else if (word.length() > secondLongest.length() &&
                       word.length() < longest.length()) {
                secondLongest = word;
            }
        }

        return secondLongest;
    }

    public static void main(String[] args) {
        String sentence = "This is a demonstration sentence for testing.";
        System.out.println("Second longest word: " + secondLongest(sentence));
    }
}

